<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/padmap/db" VERSION="2025090700" COMMENT="Pad mapping table" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <TABLES>
        <TABLE NAME="local_padmap" COMMENT="Username to pad url mapping">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="username" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENTS="Moodle username"/>
                <FIELD NAME="padurl" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENTS="Assigned pad URL"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="uniq_username" UNIQUE="true" FIELDS="username"/>
                <!-- Αν θες unique και στο URL, χρησιμοποίησε prefix σε varchar μέσω αλλαγής τύπου πεδίου.
                     Εναλλακτικά, αποθήκευσε hash του URL σε ξεχωριστό πεδίο με unique index. -->
            </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>
